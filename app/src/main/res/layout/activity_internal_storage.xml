<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.ordina.offlinestorage.fragment.InternalStorageFragment"
    android:orientation="vertical">

    <TextView android:id="@+id/private_key_label" android:text="@string/private_key_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="18sp"/>
    <EditText
        android:id="@+id/private_key_field"
        android:layout_toRightOf="@id/private_key_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/save_settings_button"
        android:layout_below="@id/private_key_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_settings_button"/>

</LinearLayout>
